{
  "manifest_version": 3,
  "name": "Tab URL Monitor",
  "version": "1.0",
  "description": "Monitor current tab URL changes",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}